type: google.api.Service
config_version: 3
name: ${service_name}
title: OSV (v1)
apis:
  - name: osv.v1.OSV
usage:
  rules:
    - selector: "*"
      allow_unregistered_calls: true
authentication:
  rules:
    - selector: "*"
      allow_without_credential: true
backend:
  rules:
    - selector: "*"
      address: ${backend_url}
      deadline: 60
documentation:
  summary: >
    OSV is a vulnerability database for open source projects. It exposes an API
    that lets users of these projects query whether or not their versions are
    impacted.
