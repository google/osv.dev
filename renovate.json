{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPaths": ["gcp/appengine/"],
      "matchLanguages": ["python"],
      "groupName": "appengine-backend"
    },
    {
      "matchPaths": ["gcp/appengine/"],
      "matchLanguages": ["javascript"],
      "groupName": "appengine-frontend"
    },
    {
      "matchPaths": ["gcp/api/"],
      "groupName": "api"
    },
    {
      "matchPaths": ["docker/"],
      "matchLanguages": ["python"],
      "groupName": "workers"
    },
    {
      "matchPaths": ["docker/"],
      "matchLanguages": ["go"],
      "groupName": "indexer"
    },
    {
      "matchPaths": ["vulnfeeds/"],
      "groupName": "vulnfeeds"
    },
    {
      "matchPaths": ["tools/"],
      "groupName": "tools"
    },
    {
      "matchFiles": ["Pipfile"],
      "groupName": "osv-lib"
    }
  ]
}
